pipeline {
    agent any
    tools {
        jdk 'jdk'
        nodejs 'nodejs'
    }
    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        AWS_ACCOUNT_ID = credentials('ACCOUNT_ID')
        AWS_ECR_REPO_NAME = credentials('ECR_REPO2')
        AWS_DEFAULT_REGION = 'us-east-1'
        REPOSITORY_URI = "${env.AWS_ACCOUNT_ID}.dkr.ecr.${env.AWS_DEFAULT_REGION}.amazonaws.com/"
    }
    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/sonalrmeshram/2nd10WeeksofCloudOps-main.git'
            }
        }
        stage('Sonarqube Analysis') {
            steps {
                dir('backend') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                            ${SCANNER_HOME}/bin/sonar-scanner \
                              -Dsonar.projectKey=backend \
                              -Dsonar.sources=. \
                              -Dsonar.host.url=http://3.82.104.83:9000 \
                              -Dsonar.login=${SONAR_TOKEN}
                        '''
                    }
                }
            }
        }
        stage('Quality Check') {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-token'
                }
            }
        }
        stage('Trivy File Scan') {
            steps {
                dir('backend') {
                    sh 'trivy fs . > trivyfs.txt'
                }
            }
        }
        stage('Docker Image Build') {
            steps {
                dir('backend') {
                    sh 'docker system prune -f'
                    sh 'docker container prune -f'
                    sh "docker build -t ${env.AWS_ECR_REPO_NAME} ."
                }
            }
        }
        stage('ECR Image Pushing') {
            steps {
                withCredentials([
                    string(credentialsId: 'ACCOUNT_ID', variable: 'AWS_ACCOUNT_ID'),
                    string(credentialsId: 'ECR_REPO2', variable: 'AWS_ECR_REPO_NAME')
                ]) {
                    sh '''
                        aws ecr get-login-password --region ${AWS_DEFAULT_REGION} | docker login --username AWS --password-stdin ${REPOSITORY_URI}
                        docker tag ${AWS_ECR_REPO_NAME} ${REPOSITORY_URI}${AWS_ECR_REPO_NAME}:$BUILD_NUMBER
                        docker push ${REPOSITORY_URI}${AWS_ECR_REPO_NAME}:$BUILD_NUMBER
                    '''
                }
            }
        }
        stage('Trivy Image Scan') {
            steps {
                withCredentials([
                    string(credentialsId: 'ACCOUNT_ID', variable: 'AWS_ACCOUNT_ID'),
                    string(credentialsId: 'ECR_REPO2', variable: 'AWS_ECR_REPO_NAME')
                ]) {
                    sh '''
                        repoNameLower=$(echo ${AWS_ECR_REPO_NAME} | tr '[:upper:]' '[:lower:]')
                        trivy --cache-dir .trivy image ${REPOSITORY_URI}${repoNameLower}:$BUILD_NUMBER > trivyimage.txt
                    '''
                }
            }
        }
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/sonalrmeshram/2nd10WeeksofCloudOps-main.git'
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "fullstack-authors-books-application"
                GIT_USER_NAME = "sonalrmeshram"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'git_token')]) {
                    sh '''
                        set -e
                        git config user.email "sonalrmeshram@gmail.com"
                        git config user.name "sonalrmeshram"
                        BUILD_NUMBER=${BUILD_NUMBER}
                        echo "Build Number: $BUILD_NUMBER"
                        
                        # Ensure latest remote changes are integrated
                        git pull --rebase https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} main
                        
                        # Update deployment file with new image
                        sed -i "s#image:.*#image: ${REPOSITORY_URI}${AWS_ECR_REPO_NAME}:$BUILD_NUMBER#g" argocd/backend/argocd-backend.yml
                        
                        # Commit and push changes
                        git add argocd/backend/argocd-backend.yml
                        git commit -m "Update deployment image to version $BUILD_NUMBER" || echo "No changes to commit"
                        git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }
    }
}

